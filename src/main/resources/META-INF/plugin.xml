<idea-plugin>
    <id>com.smetankochka.telegramcodesender</id>
    <name>Telegram Code Sender</name>
    <version>1.0.0</version>
    <vendor email="mmura997@yandex.by">
        smetankochka
    </vendor>

    <description><![CDATA[
        Plugin for sending selected code to Telegram with beautiful formatting.
    ]]></description>

    <change-notes><![CDATA[
        Initial version with basic functionality.
    ]]></change-notes>

    <idea-version since-build="231"/>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="TelegramCodeSender.SendToTelegram"
                class="com.smetankochka.telegramcodesender.SendToTelegramAction"
                text="Send Code to Telegram"
                description="Send selected code to Telegram with formatting">

            <add-to-group group-id="EditorPopupMenu" anchor="first"/>

            <keyboard-shortcut keymap="$default" first-keystroke="ctrl k"/>
        </action>
    </actions>
</idea-plugin>